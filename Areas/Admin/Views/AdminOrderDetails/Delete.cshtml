@model WebDangKyKhoaHocOnline.Models.OrderDetail

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class='fa fa-home fa-lg' style='color:#007bff'></i> Trang chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminOrderDetails" asp-action="Index">Danh sách đơn đăng ký</a>
            <span class="breadcrumb-item active">Xác nhận xóa đơn đăng ký</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 style="color: black">Xác nhận xóa đơn đăng ký ?</h4>
        <table class="table">
            <tbody>
                <tr>
                    <td width="150">ID:</td>
                    <td>@Model.OrderDetailId</td>
                </tr>
                <tr>
                    <td>Họ và tên:</td>
                    <td>@Model.Order.StudentName</td>
                </tr>
                <tr>
                    <td>Tên khóa học:</td>
                    <td>@Model.Course.CourseName</td>
                </tr>
                <tr>
                    <td>Số lượng:</td>
                    <td>@Model.Quantity</td>
                </tr>
                <tr>
                    <td>Tổng tiền:</td>
                    <td>@Model.TotalMoney.Value.ToString("#,##0") VNĐ</td>
                </tr>
            </tbody>
        </table>

        <form asp-action="Delete">
            <input type="hidden" asp-for="OrderDetailId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>

