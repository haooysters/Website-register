@model WebDangKyKhoaHocOnline.Models.Course

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class='fa fa-home fa-lg' style='color:#007bff'></i>  Trang chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminCourses" asp-action="Index">Danh sách khóa học</a>
            <span class="breadcrumb-item active">Thông tin khóa học</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title" style="color: black">Thông tin khóa học</h4>
        <table class="table">
            <tbody>
                <tr>
                    <td width="150">ID:</td>
                    <td>@Model.CourseId</td>
                </tr>
                <tr>
                    <td>Tên khóa học:</td>
                    <td>@Model.CourseName</td>
                </tr>
                <tr>
                    <td>Danh mục:</td>
                    <td>@Model.Cat.CatName</td>
                </tr>
                <tr>
                    <td>Học phí:</td>
                    <td>@Model.Price.Value.ToString("#,##0") VNĐ</td>
                </tr>
                <tr>
                    <td>Mô tả ngắn:</td>
                    <td>@Model.ShortDesc</td>
                </tr>
                <tr>
                    <td>Mô tả:</td>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <td>Hình ảnh:</td>
                    <td><img width="200" height="200" src="~/images/courses/@Model.Thumb" /></td>
                </tr>
                <tr>
                    <td>Ngày tạo:</td>
                    <td>@Model.CreateDate</td>
                </tr>
                <tr>
                    <td>Trạng thái:</td>
                    <td>@Model.Active</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


