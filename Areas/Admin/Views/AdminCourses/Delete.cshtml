@model WebDangKyKhoaHocOnline.Models.Course

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class='fa fa-home fa-lg' style='color:#007bff'></i> Trang chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminCourses" asp-action="Index">Danh sách khóa học</a>
            <span class="breadcrumb-item active">Xác nhận xóa khóa học</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 style="color: black">Xác nhận xóa khóa học ?</h4>
        <table class="table">
            <tbody>
                <tr>
                    <td width="150">ID:</td>
                    <td>@Model.CourseId</td>
                </tr>
                <tr>
                    <td>Tên khóa học:</td>
                    <td>@Model.CourseName</td>
                </tr>
                <tr>
                    <td>Danh mục:</td>
                    <td>@Model.Cat.CatName</td>
                </tr>
                <tr>
                    <td>Học phí:</td>
                    <td>@Model.Price.Value.ToString("#,##0") VNĐ</td>
                </tr>
                <tr>
                    <td>Mô tả ngắn:</td>
                    <td>@Model.ShortDesc</td>
                </tr>
                <tr>
                    <td>Mô tả:</td>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <td>Hình ảnh:</td>
                    <td>@Model.Thumb</td>
                </tr>
                <tr>
                    <td>Trạng thái:</td>
                    <td>@Model.Active</td>
                </tr>
            </tbody>
        </table>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CourseId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </form>
    </div>
</div>


