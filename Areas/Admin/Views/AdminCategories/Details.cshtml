@model WebDangKyKhoaHocOnline.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class='fa fa-home fa-lg' style='color:#007bff'></i> Trang chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Danh mục khóa học</a>
            <span class="breadcrumb-item active">Thông tin danh mục khóa học</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title" style="color: black">Thông tin danh mục khóa học</h4>
        <table class="table">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td>@Model.CatId</td>
                </tr>
                <tr>
                    <td>Tên khóa học:</td>
                    <td>@Model.CatName</td>
                </tr>                
                <tr>
                    <td>Mô tả:</td>
                    <td>@Model.Description</td>
                </tr>               
            </tbody>
        </table>
    </div>
</div>
