@model WebDangKyKhoaHocOnline.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class='fa fa-home fa-lg' style='color:#007bff'></i> Trang chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Danh mục khóa học</a>
            <span class="breadcrumb-item active">Xác nhận xóa danh mục</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 style="color: black">Xác nhận xóa danh mục khóa học ?</h4>
        <table class="table">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td>@Model.CatId</td>
                </tr>
                <tr>
                    <td>Tên danh mục:</td>
                    <td>@Model.CatName</td>
                </tr>
                <tr>
                    <td>Mô tả:</td>
                    <td>@Model.Description</td>
                </tr>
            </tbody>
        </table>
        <form asp-action="Delete">
            <input type="hidden" asp-for="CatId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />           
        </form>
    </div>
</div>